<h1>Buscar Usuarios</h1>

<form action="/user/showUsers" method="GET" class="row">
  <div class="input-field col s8">
    <input type="search" name="nombre" id="nombre" placeholder="Buscar Usuario">
    <label for="nombre">Buscar Usuario</label>
  </div>
  <div class="input-field col s4">
    <button type="submit" class="btn waves-effect waves-light">Buscar Usuario</button>
  </div>
</form>


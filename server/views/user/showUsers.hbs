<div class="row">
  {{#each users}}
  <div class="col s12">
    <div class="card teal darken-4">
      <div class="card-content teal-text text-lighten-5">
        <h1>Nombre: {{nombre}}</h1>
        <h5>ID: {{_id}}</h5>
        <h5>Matricula: {{matricula}}</h5>
        <h5>Grado: {{grado}}</h5>
        <h5>Seccion: {{seccion}}</h5>
        <h5>Correo: {{correo}}</h5>
      </div>
      <div class="card-action">

      </div>
    </div>
  </div>
  {{else}}
  <p>No hay usuarios por mostrar.</p>
  {{/each}}
</div>
<div class='row'>
  <div class='col s12 m10 offset-m1 18 offset-12'>
    <div class='card'>
      <div class='card-image'>
        <img src='/img/addproject.jpeg' alt='Imagen creacion de proyecto' />
        <span class='card-title add-project' style='font-weight: bolder;'>
          Editar libro
        </span>
      </div>
      <form autocomplete="off" action="/project/edit/{{ project._id }}?_method=put" method="post">
        <div class='card-content'>
          <div class='input-field'>
            <label for='project-name'>
              Titulo del libro
            </label>
            <input
              type='text'
              id='titulo'
              name='titulo'
              placeholder='Ingrese titulo de libro'
              class='validate'
              value='{{libros.titulo}}'
              required
            />
            <span
              class='helper-text'
              data-error='üëÜ Es necesario ingresar el titulo'
              data-success='‚úÖ Correcto'
            ></span>
            {{#if errorModel.name}}
              <span style='color: crimson;'>Error: {{errorModel.name}}</span>
            {{/if}}
          </div>
          <div class='input-field'>
            <label for='project-name'>
              Autor
            </label>
            <input
              type='text'
              id='autor'
              name='autor'
              placeholder='Ingrese autor de libro'
              class='validate'
              value='{{libros.autor}}'
              required
            />
            <span
              class='helper-text'
              data-error='üëÜ Es necesario ingresar el autor'
              data-success='‚úÖ Correcto'
            ></span>
            {{#if errorModel.name}}
              <span style='color: crimson;'>Error: {{errorModel.name}}</span>
            {{/if}}
          </div>
          <div class='input-field'>
            <label for='project-name'>
              Categor√≠a
            </label>
            <input
              type='text'
              id='categoria'
              name='categoria'
              placeholder='Ingrese categoria de libro'
              class='validate'
              value='{{libros.categoria}}'
              required
            />
            <span
              class='helper-text'
              data-error='üëÜ Es necesario ingresar categoria'
              data-success='‚úÖ Correcto'
            ></span>
            {{#if errorModel.name}}
              <span style='color: crimson;'>Error: {{errorModel.name}}</span>
            {{/if}}
          </div>
        <div class='input-field'>
            <label for='project-name'>
              ISBN
            </label>
            <input
              type='text'
              id='isbn'
              name='isbn'
              placeholder='Ingrese ISBN'
              class='validate'
              value='{{libros.isbn}}'
              required
            />
            <span
              class='helper-text'
              data-error='üëÜ Es necesario ingresar el ISBN'
              data-success='‚úÖ Correcto'
            ></span>
            {{#if errorModel.name}}
              <span style='color: crimson;'>Error: {{errorModel.name}}</span>
            {{/if}}
          </div>
          <div class='input-field'>
            <label for='project-name'>
              Copias disponibles
            </label>
            <input
              type='text'
              id='copias_disponibles'
              name='copias_disponibles'
              placeholder='Ingrese el numero de copias disponibles'
              class='validate'
              value='{{copias_disponibles}}'
              required
            />
            <span
              class='helper-text'
              data-error='üëÜ Es necesario ingresar copias disponibles'
              data-success='‚úÖ Correcto'
            ></span>
            {{#if errorModel.name}}
              <span style='color: crimson;'>Error: {{errorModel.name}}</span>
            {{/if}}
          </div>
        <div class='card-action'>
          <button class='blue darken-3 waves-effect waves-light btn'>
            <i class='material-icons left'>edit</i>
            Editar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
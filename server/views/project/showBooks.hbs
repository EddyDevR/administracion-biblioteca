<h1>Buscar Libros</h1>

<form action="/library/books" method="GET" class="row">
  <div class="input-field col s8">
    <input type="search" name="searchBook" id="searchBook" placeholder="Buscar Libro">
    <label for="searchBook">Buscar Libro</label>
  </div>
  <div class="input-field col s4">
    <button type="submit" class="btn waves-effect waves-light">Buscar Libro</button>
  </div>
</form>


<div class="row">
  {{#each projects}}
    <div class="col s12">
      <div class="card teal darken-4">
        <div class="card-content teal-text text-lighten-5">
          
          <h1>{{titulo}}</h1>
          <h5>Autor: {{autor}}</h5>
          <h5>Categoria: {{categoria}}</h5>
          <h5>ISBN: {{isbn}}</h5>
          <h5>Copias disponibles: {{copias_disponibles}}</h5>
        </div>
        <div class="card-action">
                   
        </div>
      </div>
    </div>
  {{else}}
    <p>No hay libros que listar.</p>
  {{/each}}
</div>
